<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_overlay_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
        <ProgressBar
            android:id="@+id/loading_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
        
        <TextView android:id="@+id/textoDetectando"
        	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
	        android:layout_above="@+id/loading_indicator"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:textSize="50sp"
            android:text="@string/texto_detectando" />

		<ImageButton 
            android:id="@+id/botonReiniciar"
            android:layout_width="50dp"
            android:layout_height="50dp"
           	android:layout_alignParentTop="true" 
           	android:layout_toRightOf="@+id/botonOpciones"
            android:background="@null"
            android:contentDescription="@string/boton_reiniciar"
            android:src="@drawable/selector_reiniciar" 
            android:onClick="reiniciarCancion"
            android:scaleType="fitXY" />
        
		<ImageButton 
           	android:id="@+id/botonOpciones"
           	android:layout_width="50dp"
           	android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" 
           	android:background="@null"
          	android:contentDescription="@string/boton_opciones"
           	android:src="@drawable/selector_opciones" 
           	android:onClick="botonOpciones"
           	android:scaleType="fitXY" />
      	
		<ImageButton 
       		android:id="@+id/botonSalir"
           	android:layout_width="50dp"
           	android:layout_height="50dp"
           	android:layout_alignParentRight="true"
           	android:layout_alignParentTop="true" 
           	android:background="@null"
           	android:contentDescription="@string/boton_salir"
           	android:src="@drawable/selector_salir" 
           	android:onClick="botonSalir"
           	android:scaleType="fitXY" />

		<View
		    android:id="@+id/dividerItem"
		    android:layout_height="1dp"
		    android:layout_width="fill_parent"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:background="@color/white" />
		
		<LinearLayout
		    android:id="@+id/layoutScore"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
		    android:orientation="vertical"
		    android:background="@drawable/background_prueba"
		    android:visibility="invisible"  >
      	    
			<TextView
			    android:id="@+id/textoTime"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:fontFamily="sans-serif-condensed"
			    android:gravity="center_horizontal"
			    android:text="@string/texto_titulo_score"
			    android:textColor="@color/black"
			    android:textSize="20sp" />
			   
			<TextView
			    android:id="@+id/textoScore"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:gravity="center_horizontal"
			    android:layout_marginBottom="5dp"
			    android:text="@string/texto_score"
			    android:textColor="@color/black"
			    android:textSize="30sp" />

      	</LinearLayout>
         
</RelativeLayout>